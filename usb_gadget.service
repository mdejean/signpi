[Unit]
Description=USB Gadget
After=systemd-modules-load.service
Wants=sign_startup.service
Wants=generate_image.service
[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/composite_gadget.sh up
ExecStop=/usr/local/bin/composite_gadget.sh down
 
[Install]
WantedBy=multi-user.target
